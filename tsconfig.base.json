{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "declaration": true,
    "rootDir": ".",
    "types": [],
    "paths": {
      "@p-helper/*": ["packages/*"]
    },
  },
}
